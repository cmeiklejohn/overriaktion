#!/usr/bin/env ruby

$:.push File.expand_path("../../lib", __FILE__)

require 'optparse'
require 'methadone'
require "overriaktion"

include Methadone::Main

main do |api_key, resource, operation|
  cli = Overriaktion::CLI.new(api_key)
  cli.dispatch(resource, operation)
end

description "Client gem for the Overriak service."

arg :api_key
arg :resource
arg :operation, :optional

go!
